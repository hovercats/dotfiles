# set fullscreen
super + f
  fullscreen.sh $(pfw)

# set groups for focued window
control + shift + {1-9}
  groups.sh -s $(pfw) {1-9}
 
# toggle groups visibility
control + {1-9}
  groups.sh -t {1-9}

# switch to next/prev workspace
alt + {h,l}
  workspace.sh {-n,-p}

# switch to nth workspace
alt + {_, shift} {1-9}
  workspace.sh -{g,m} {1-9}

# change focus
alt + {_, shift} Tab  
  focus.sh {prev,next}

# kill window
alt + shift + c
  killw $(pfw)

# restart sxhkd
super + alt r
  pkill sxhkd && sxhkd &

# launch said scripts
super + {m,b,d}
  {dmpv,bmks,dsearch}

# launch surf
super + s
  surf -d

#launch st
super + Return
 st  

#launch dmenu
alt + p
	dmenu_run

#volumecontrol
super + {0,9}
	tinymix -D 1 set 13 {5+,5-}

#kill x server
super + control + q
	pkill x 

#reboot/poweroff
super + alt + {p,r}
	ssu {poweroff,reboot}

#brightness control
super + {4,3}
  bri {d,i}
