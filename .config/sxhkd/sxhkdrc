#volumecontrol
super + {F11,F10}
	amixer set Master {5%+,5%-}

#kill x server
super + control + q
	pkill x && pkill rainbow.sh

#reboot/poweroff
super + alt + p
	ssu poweroff

super + alt + r
	ssu reboot

#brightness control
super + {F3,F4}
	ssu brightnessctl --class=backlight set {10%-,10%+}
	
#restart eiwd
super + F2
	ssu sv restart eiwd


